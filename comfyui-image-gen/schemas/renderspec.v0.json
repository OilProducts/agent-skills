{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local-image-gen/schemas/renderspec.v0.json",
  "title": "RenderSpec v0",
  "type": "object",
  "required": [
    "book_id",
    "page",
    "scene",
    "characters",
    "constraints",
    "style_pack",
    "seed"
  ],
  "properties": {
    "book_id": {
      "type": "string",
      "minLength": 1
    },
    "page": {
      "oneOf": [
        {
          "type": "integer",
          "minimum": 1
        },
        {
          "type": "string",
          "minLength": 1
        }
      ]
    },
    "intent": {
      "type": "string",
      "default": "illustration"
    },
    "scene": {
      "type": "string",
      "minLength": 1
    },
    "characters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "pose": {
            "type": "string"
          },
          "emotion": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "camera": {
      "type": "object",
      "properties": {
        "shot": {
          "type": "string"
        },
        "angle": {
          "type": "string"
        },
        "lens": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "environment": {
      "type": "object",
      "additionalProperties": true
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "style_pack": {
      "type": "string",
      "minLength": 1
    },
    "refs": {
      "type": "object",
      "properties": {
        "style": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "characters": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": true
    },
    "seed": {
      "type": "integer",
      "minimum": 0
    },
    "resolution": {
      "type": "object",
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 256
        },
        "height": {
          "type": "integer",
          "minimum": 256
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

